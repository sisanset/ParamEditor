<Window x:Class="ParamEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParamEditor"
        xmlns:vm="clr-namespace:ParamEditor.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Button Content="保存" DockPanel.Dock="Bottom" Height="40" Margin="5"
                Command="{Binding SaveCommand}" />
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Parameters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ParameterViewModel}">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
                            <!-- Grid にして横並び、列幅を規定 -->
                            <Grid VerticalAlignment="Center" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <!-- ラベル幅は内容に合わせる -->
                                    <ColumnDefinition Width="300"/>
                                    <!-- コントロール領域は残りを占有。必要に応じて "2*" や固定幅に調整 -->
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding View}"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,8,0"/>

                                <ContentControl Grid.Column="1"
                                                Content="{Binding}"
                                                ContentTemplateSelector="{StaticResource ParameterTemplateSelector}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
