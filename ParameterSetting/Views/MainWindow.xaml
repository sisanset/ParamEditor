<Window x:Class="ParamEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParamEditor"
        xmlns:vm="clr-namespace:ParamEditor.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#f7f9fc"
        FontFamily="Segoe UI"
        >
    <Window.Resources>
        <Style x:Key="ParameterCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Opacity="0.05" BlurRadius="6"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="GroupHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10,5,0,10"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding Border.CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1084E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Border DockPanel.Dock="Bottom" Background="#f0f2f5" Padding="8" BorderThickness="1,1,0,0" BorderBrush="#ccc">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="保存" Width="100" Height="40" Margin="5"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </Border>
        <TabControl ItemsSource="{Binding Groups}" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Padding="10" 
                    Margin="10">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GroupName}" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               Margin="8,4"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:ParameterViewModel}">
                                    <Border Style="{StaticResource ParameterCardStyle}">
                                        <!-- Grid にして横並び、列幅を規定 -->
                                        <Grid VerticalAlignment="Center" Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <!-- ラベル幅は内容に合わせる -->
                                                <ColumnDefinition Width="300"/>
                                                <!-- コントロール領域は残りを占有。必要に応じて "2*" や固定幅に調整 -->
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/> 
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding View}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       Margin="0,0,0,4"/>
                                            <ContentControl Grid.Column="1"
                                                            Content="{Binding}"
                                                            ContentTemplateSelector="{StaticResource ParameterTemplateSelector}"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Definition.Unit}"
                                                       Foreground="#777"
                                                       FontSize="11"
                                                       Margin="0,2,0,0"
                                                       Visibility="{Binding Definition.Unit, Converter={StaticResource NullToVisibilityConverter}}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
